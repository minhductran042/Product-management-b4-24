extends ../../layouts/default.pug

block main
  if (account.fullName)
    h1(class="mb-4") #{account.fullName}

  if (account.email)
    div(class="mb-4") #{account.email}

  if (role.title)
    div(class="mb-4") #{role.title}

  if (account.avatar)
    div(class="mb-4")
      img(
        src=account.avatar
        style="width: 100px"
      )

  if (account.status)
    div(class="mb-4")
      span Trạng thái:
      if (account.status === "active")
        span(class="badge badge-success") Hoạt động
      else
        span(class="badge badge-danger") Dừng hoạt động
