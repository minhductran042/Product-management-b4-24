extends ../../layouts/default.pug

block main
  h1(class="mb-4") Nhóm quyền


  .card.mb-3
    .card-header Danh sách

        table(
        class="table table-hover table-sm"
        )
            thead
                tr
                    th STT
                    th Nhóm quyền
                    th Mô tả ngắn
                    th Hành động

            tbody
                each item, index in records
                    tr
                        td #{index + 1}
                        td #{item.title}
                        td #{item.description}
                        td
                            a(
                                class="btn btn-warning btn-sm ml-1"
                                button-restore-role=item.id
                            ) Khôi phục
                            button(
                                class="btn btn-danger btn-sm ml-1"
                                button-permanently-role=item.id
                            ) Xóa Vĩnh Viễn