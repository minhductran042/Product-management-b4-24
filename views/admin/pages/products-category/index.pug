extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug

block main
  h1(class="mb-4") Danh mục sản phẩm

  .card.mb-3
    .card-header Bộ lọc và Tìm kiếm
    .card-body
      .row
        .col-6
          +filter-status(filterStatus)
        .col-6
          +search(keyword)

  .card.mb-3
    .card-header Danh sách
    .card-body
      .row
        .col-8
        .col-4.text-right
          a(
            href=`/${prefixAdmin}/products-category/create`
            class="btn btn-outline-success"
          ) + Thêm mới

      table(
        class="table table-hover table-sm"
      )
        thead
          tr
            th STT
            th Hình ảnh
            th Tiêu đề
            th Vị trí
            th Trạng thái
            th Hành động

        tbody
          each item, index in records
            tr
              td #{index + 1}
              td
                img(
                  src=item.thumbnail
                  alt=item.title
                  width="100px"
                  height="auto"
                )
              td #{item.title}
              td
                input(
                  link=`/${prefixAdmin}/products-category/change-position/${item.id}`
                  type="number"
                  value=item.position
                  style="width: 60px"
                  min="1"
                  name="position-category"
                )
              td
                if (item.status === "active")
                  button(
                    link = `/${prefixAdmin}/products-category/change-status/inactive/${item.id}`
                    class="badge badge-success"
                    data-status="active"
                    data-id=item.id
                    button-change-status-category
                  ) Hoạt động
                else
                  button(
                    link= `/${prefixAdmin}/products-category/change-status/active/${item.id}`
                    class="badge badge-danger"
                    data-status="inactive"
                    data-id=item.id
                    button-change-status-category
                  ) Dừng hoạt động
              td
                a(
                  class="btn btn-secondary btn-sm"
                  href=`/${prefixAdmin}/products-category/detail/${item.id}`
                ) Chi tiết
                a(
                  class="btn btn-warning btn-sm ml-1"
                  href=`/${prefixAdmin}/products-category/edit/${item.id}`
                ) Sửa
                button(
                  class="btn btn-danger btn-sm ml-1"
                  button-delete-category = `/${prefixAdmin}/products-category/delete/${item.id}`
                  data-id=item.id
                ) Xóa
    +pagination(pagination) 